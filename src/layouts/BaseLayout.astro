---
import TrackVitals from '../components/TrackVitals.astro';

import '@fontsource/poppins/latin.css';
import '../styles/global.css';

interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<html lang="en">
	<head>
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-7235SXXVY4" />
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-7235SXXVY4');
		</script>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Hi! This is my portfolio website, my name is Sebastián López, I am a Full-Stack Developer and I hope you enjoy all the projects I have done."
		/>
		<!-- <meta http-equiv="Content-Security-Policy" content="default-src 'self' vitals.vercel-insights.com" /> -->
		<title>{pageTitle}</title>

		<script>
			import { inject } from '@vercel/analytics';
			inject();
		</script>
	</head>
	<body>
		<slot />
		<TrackVitals />
	</body>
</html>
